[MASTER]

ignore = _vendor, compat.py


[MESSAGES CONTROL]

disable = all,
          broad-except,
          import-error,
enable = anomalous-backslash-in-string,
         bad-super-call,
         bare-except,
         dangerous-default-value,
         function-redefined,
         line-too-long,
         super-init-not-called,
         ungrouped-imports,
         unused-import,


[FORMAT]

max-line-length = 79


[REPORTS]

reports = no
